@model IEnumerable<SecretSanta.Models.Participants>

@{
    ViewData["Title"] = "List of participants";
}

<h3>You're participants added successfully</h3>
<br />
<style>
    table {
        width: 100%;
    }

    table, th, td {
        border: 1px solid red;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }

    th {
        background-color: red;
        color: white;
    }
</style>
<table>
    <tr style="border:1px solid red; margin:5px;">
        <th>Name</th>
        <th>Email</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="border:1px solid red; margin:5px;">
            <td>@item.Name</td>
            <td>@item.Email</td>
        </tr>
    }
</table>
<input type='button' value='Generate Secret Santa' id='myButton' onClick='redirectOnClick()' />
<script>
    function redirectOnClick() {
        document.location = 'Generate';
    }
</script>


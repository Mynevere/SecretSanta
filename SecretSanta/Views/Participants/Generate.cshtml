@model IEnumerable<SecretSanta.Models.Recipients>
@{
    ViewData["Title"] = "List of Secret Santa";
}

<h1>List of Secret Santa</h1><br/>
<style>
    table {
        width: 100%;
    }

    table, th, td {
        border: 1px solid red;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }
    th{
        background-color: red;
        color: white;
    }
</style>
<table>
    <tr style="border:1px solid red; margin:5px;">
        <th>Santa Name</th>
        <td>Santa Email</td>
        <th>Recipients Name</th>
        <td>Recipients Email</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="border:1px solid red; margin:5px;">
            <td>@item.NameS</td>
            <td>@item.EmailS</td>
            <td>@item.NameR</td>
            <td>@item.EmailR</td>
        </tr>
    }
</table>

